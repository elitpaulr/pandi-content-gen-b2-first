  "validation_workflow": {
    "description": "Recommended workflow for quality assurance validation",
    "stages": [
      {
        "stage": 1,
        "name": "Automated Technical Check",
        "description": "System-based validation of technical requirements",
        "checks": [
          "Text length validation (400-800 words)",
          "Question count verification (5-6 questions)",
          "Vocabulary level assessment",
          "Sentence structure analysis"
        ],
        "automated": true
      },
      {
        "stage": 2,
        "name": "Content Quality Review",
        "description": "Human review of content quality and appropriateness",
        "checks": [
          "Age appropriateness assessment",
          "Cultural neutrality verification",
          "Educational value evaluation",
          "Engagement factor analysis"
        ],
        "automated": false
      },
      {
        "stage": 3,
        "name": "Assessment Potential Validation",
        "description": "Review of question quality and assessment effectiveness",
        "checks": [
          "Question type distribution",
          "Inference opportunity assessment",
          "Vocabulary testing potential",
          "Overall assessment quality"
        ],
        "automated": "partial"
      },
      {
        "stage": 4,
        "name": "Final Quality Assurance",
        "description": "Comprehensive final review before approval",
        "checks": [
          "Complete checklist verification",
          "Pitfall avoidance confirmation",
          "Overall quality assessment",
          "Approval for use"
        ],
        "automated": false
      }
    ]
  },
  
