{
  "metadata": {
    "title": "B2 First Reading Part 5 Quality Assurance Checklist",
    "version": "1.0",
    "created": "2025-06-15",
    "description": "Comprehensive quality assurance checklist and validation criteria for B2 First Reading Part 5 task generation",
    "target_level": "B2 (Intermediate-Upper Intermediate)",
    "target_age": "16-25 years",
    "usage": "Task validation, content quality control, automated checking"
  },
  
  "content_quality_checklist": {
    "description": "Core content quality requirements for B2 First tasks",
    "criteria": [
      {
        "id": "age_appropriateness",
        "requirement": "Topic is age-appropriate for 16-25 year olds",
        "validation_points": [
          "Content relates to young adult experiences and interests",
          "Topics are relevant to university-age learners",
          "Themes connect to future career and life goals",
          "Avoids childish or overly mature content"
        ],
        "weight": "high",
        "automated_check": true
      },
      {
        "id": "cultural_neutrality",
        "requirement": "Content is culturally neutral and globally accessible",
        "validation_points": [
          "No assumptions about specific cultural knowledge",
          "Examples work across different countries",
          "Avoids culture-specific references",
          "Uses universal themes and concepts"
        ],
        "weight": "high",
        "automated_check": false
      },
      {
        "id": "complexity_level",
        "requirement": "Complexity level matches B2 requirements",
        "validation_points": [
          "Vocabulary is challenging but accessible",
          "Sentence structures are appropriately complex",
          "Concepts require analysis but aren't overly specialized",
          "Reading level matches intermediate-upper intermediate"
        ],
        "weight": "critical",
        "automated_check": true
      },
      {
        "id": "educational_value",
        "requirement": "Topic has clear educational value",
        "validation_points": [
          "Content provides learning opportunities beyond language",
          "Information is accurate and reliable",
          "Topic contributes to general knowledge",
          "Material has lasting educational benefit"
        ],
        "weight": "medium",
        "automated_check": false
      }
    ]
  },
  
  "engagement_factors_checklist": {
    "description": "Criteria for ensuring content engages target learners",
    "criteria": [
      {
        "id": "inherent_interest",
        "requirement": "Topic is inherently interesting to target demographic",
        "validation_points": [
          "Subject matter appeals to 16-25 age group",
          "Topic addresses current interests and concerns",
          "Content has natural appeal without forced engagement",
          "Subject connects to popular trends or issues"
        ],
        "weight": "high",
        "automated_check": false
      },
      {
        "id": "personal_connection",
        "requirement": "Content connects to learners' experiences or aspirations",
        "validation_points": [
          "Topics relate to student life and experiences",
          "Content addresses future career considerations",
          "Material connects to personal development goals",
          "Themes resonate with young adult challenges"
        ],
        "weight": "high",
        "automated_check": false
      },
      {
        "id": "discussion_potential",
        "requirement": "Material could generate meaningful discussion",
        "validation_points": [
          "Topic has multiple perspectives to explore",
          "Content raises thought-provoking questions",
          "Material encourages critical thinking",
          "Subject matter supports classroom debate"
        ],
        "weight": "medium",
        "automated_check": false
      },
      {
        "id": "contemporary_relevance",
        "requirement": "Topic has contemporary relevance",
        "validation_points": [
          "Content addresses current issues and trends",
          "Information is up-to-date and timely",
          "Topic reflects modern concerns and interests",
          "Material won't quickly become obsolete"
        ],
        "weight": "high",
        "automated_check": true
      }
    ]
  },
  
  "technical_requirements_checklist": {
    "description": "Technical specifications for B2 First Reading Part 5 tasks",
    "criteria": [
      {
        "id": "text_length",
        "requirement": "Text length: 400-800 words",
        "validation_points": [
          "Minimum 400 words for adequate complexity",
          "Maximum 800 words to maintain focus",
          "Optimal range 500-650 words",
          "Length supports 5-6 comprehension questions"
        ],
        "weight": "critical",
        "automated_check": true,
        "min_value": 400,
        "max_value": 800,
        "optimal_range": [500, 650]
      },
      {
        "id": "vocabulary_level",
        "requirement": "Vocabulary level: B2 appropriate",
        "validation_points": [
          "Uses intermediate-upper intermediate vocabulary",
          "Includes some challenging but learnable words",
          "Avoids overly technical or specialized terms",
          "Vocabulary supports learning objectives"
        ],
        "weight": "critical",
        "automated_check": true
      },
      {
        "id": "sentence_structure",
        "requirement": "Sentence structure: Varied and complex enough for B2",
        "validation_points": [
          "Mix of simple, compound, and complex sentences",
          "Appropriate use of subordinate clauses",
          "Varied sentence beginnings and structures",
          "Complexity matches B2 reading level"
        ],
        "weight": "high",
        "automated_check": true
      },
      {
        "id": "question_support",
        "requirement": "Content supports 5-6 comprehension questions",
        "validation_points": [
          "Text provides material for inference questions",
          "Vocabulary can be tested in context",
          "Detail questions can be formulated",
          "Author's attitude/opinion is discernible"
        ],
        "weight": "critical",
        "automated_check": true,
        "min_questions": 5,
        "max_questions": 6
      }
    ]
  },
  
